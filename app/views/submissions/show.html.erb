<p id="notice"><%= notice %></p>
<div class="row">
	<a href="<%=exhibition_path(@submission.application.exhibition) %>">
		<h3>Reviewing <%=@submission.application.exhibition.name %></h3>
	</a>
</div>
<div class="row">
	<div class="span8">
		<img src = "<%= @submission.slide.medium %>" />
	</div>
	<div class="span4">
		<p>
			<a href="<%= artist_path(@submission.application.artist) %>">
				<%= @submission.application.artist.full_name %>
			</a>
		</p>
		<p><strong>
			<%= @submission.title %>
			<%=", #{@submission.year}" unless @submission.year.nil? %>
		</strong></p>
		<p><%= @submission.medium %></p>
		<p><%= @submission.price.nil? ? "" : "$#{@submission.price}"  %></p>
		<p>
		<% if @submission.prev_id %>
			<a href="<%= submission_path(@submission.prev_id) %>">
				Prev
			</a>
		<% end %>
		<% if @submission.next_id %>
			<a href="<%= submission_path(@submission.next_id) %>">
				Next
			</a>
		<% end %>
		</p>
		<p>
<%= link_to 'Edit Info', edit_submission_path(@submission) %> |
<%= link_to 'Application', application_path(@submission.application_id) %> | 
<%= link_to 'Delete', @submission, method: :delete, data: { confirm: 'Are you sure you want to delete this image?' } %>
		</p>
		<p>
	</div>
</div>

